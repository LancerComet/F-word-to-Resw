.table-view
  flex-grow: 1
  width: 100%
  height: 100%
  padding: 20px
  box-sizing: border-box

  .action-bar
    margin-top: 10px

    .add-button
      padding: 12px 20px
      background-color: #d9ebe5
      color: #177693
      border: 0
      border-radius: 20px

  .data-table
    width: 100%
    margin-top: 10px
    color: #485e68

    th, td
      border: 1px solid transparent

    td
      padding: 10px

    thead td
      background-color: #d1e3e3
      color: #177693

    tbody td
      background-color: #f5f6f8

    textarea
      height: 5em
      padding: 5px
      resize: vertical
      border: none
      border-bottom: 1px solid gray
      box-sizing: border-box
      font-family: inherit

    button
      margin: 5px
      vertical-align: middle
      white-space: nowrap
